{
    "model": {
        "type": "minecraft:select",
        "property": "minecraft:custom_model_data",
        "index": 0,
        "cases": [
            {
                "when": "burning",
                "model": {
                    "type": "minecraft:model",
                    "model": "luigis_mansion:entity/heart/burning"
                }
            },
            {
                "when": "watery",
                "model": {
                    "type": "minecraft:model",
                    "model": "luigis_mansion:entity/heart/watery"
                }
            },
            {
                "when": "frozen",
                "model": {
                    "type": "minecraft:model",
                    "model": "luigis_mansion:entity/heart/frozen"
                }
            }
        ],
        "fallback": {
            "type": "minecraft:model",
            "model": "luigis_mansion:entity/heart/ghost"
        }
    }
}