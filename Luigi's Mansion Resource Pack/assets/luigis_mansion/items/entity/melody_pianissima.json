                "scale": 1.0,
                "entries": [
                    {
                        "threshold": 1,
                        "model": {
                            "type": "minecraft:model",
                            "model": "luigis_mansion:entity/melody_pianissima/right_arm"
                        }
                    },
                    {
                        "threshold": 2,
                        "model": {
                            "type": "minecraft:model",
                            "model": "luigis_mansion:entity/melody_pianissima/left_arm"
                        }
                    },
                    {
                        "threshold": 3,
                        "model": {
                            "type": "minecraft:model",
                            "model": "luigis_mansion:entity/melody_pianissima/body"
                        }
                    }
                ],
                "fallback": {
                    "type": "minecraft:model",
                    "model": "luigis_mansion:entity/melody_pianissima/head"
                }
            },
            "on_true": {
                "type": "minecraft:model",
                "model": "luigis_mansion:item/empty"
            }
        }
    }
